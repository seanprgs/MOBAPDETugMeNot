<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="edu.dlsu.mobapde.mobapdetugmenot.StatsActivity">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@null"
        android:src="@drawable/back"
        android:scaleType="centerCrop"
        android:id="@+id/ib_back"/>
    <ImageView
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:src="@drawable/statsheader"
        android:scaleType="centerCrop"
        android:layout_gravity="right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WIN-LOSS RECORD:"
            android:fontFamily="fonts/image_font"
            android:textColor="#fff"
            android:layout_marginRight="65dp"
            android:textSize="20sp"
            android:id="@+id/tv_wl"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-0"
            android:textColor="#fff"
            android:textSize="25sp"
            android:id="@+id/tv_record"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FASTEST WIN TIME:"
            android:textColor="#fff"
            android:layout_marginRight="65dp"
            android:textSize="20sp"
            android:id="@+id/tv_fwt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30.15"
            android:textColor="#fff"
            android:textSize="17sp"
            android:id="@+id/tv_time"/>

    </LinearLayout>
</LinearLayout>
